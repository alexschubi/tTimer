<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetRight">0dp</item>
        <item name="materialButtonStyle">@style/tMaterialButton</item>
        <item name="android:textViewStyle">@style/tTextView</item>
        <item name="floatingActionButtonStyle">@style/tFloatingButton</item>
        <item name="textInputStyle">@style/tTextEdit</item>
        <item name="materialTimePickerStyle">@style/tTimePicker</item>
        <item name="cardViewStyle">@style/tCardView</item>
        <item name="materialCardViewStyle">@style/tCardView</item>
        <item name="preferenceTheme">@style/tPreferenceTheme</item>
        <item name="preferenceFragmentStyle">@style/tPreferenceTheme</item>
        <item name="preferenceStyle">@style/Preference</item>
        <item name="preferenceCategoryStyle">@style/Preference.Category</item>
        <item name="editTextPreferenceStyle">@style/Widget.Design.TextInputLayout</item>
    </style>

    <style name="tFragment">
        <item name="background">@color/dn_fragment_background</item>
    </style>
    <style name="tMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/dn_accent_1</item>
        <item name="android:textColor">@color/dn_text</item>
        <item name="android:textAlignment">center</item>
        <item name="cornerRadius">4dp</item>
        <item name="autoSizeMaxTextSize">100sp</item>
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:padding">5dp</item>
        <item name="android:insetTop">2dp</item>
        <item name="android:insetBottom">2dp</item>
        <item name="android:insetLeft">2dp</item>
        <item name="android:insetRight">2dp</item>
        <item name="android:elevation">10dp</item>
    </style>
    <style name="tTextView" parent="Widget.MaterialComponents.TextView">
        <item name="backgroundTint">@color/dn_accent_2</item>
        <item name="android:textColor">@color/dn_text</item>
        <item name="android:textAlignment">center</item>
        <item name="cornerRadius">4dp</item>
        <item name="autoSizeMaxTextSize">100sp</item>
        <item name="autoSizeMinTextSize">16sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:shape">rectangle</item>
        <item name="background">@drawable/rounded_corner</item>
        <item name="android:scrollbars">none</item>
    </style>
    <style name="tTextEdit" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="backgroundTint">@color/dn_accent_2</item>
        <item name="android:textColor">@color/dn_text</item>
        <item name="android:textAlignment">center</item>
        <item name="cornerRadius">4dp</item>
        <item name="autoSizeMaxTextSize">100sp</item>
        <item name="autoSizeMinTextSize">16sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:shape">rectangle</item>
        <item name="background">@drawable/rounded_corner</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>
    <style name="tFloatingButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">#43A047</item>
        <item name="tint">#FFFFFF</item>
        <item name="elevation">20dp</item>
    </style>
    <style name="tTimePicker" parent="Widget.MaterialComponents.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>
    <style name="tDatePicker" parent="Widget.MaterialComponents.MaterialCalendar">
    </style>
    <style name="tCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>
    <style name="tPreferenceTheme" parent="Theme.MaterialComponents.DayNight.Bridge">
        <item name="colorPrimary">@color/dn_text</item>
        <item name="colorAccent">@color/dn_accent_1</item>
        <item name="background">@color/dn_fragment_background</item>
        <item name="backgroundColor">@color/dn_fragment_background</item>
    </style>
    <style name="Preference.Category" parent="Theme.MaterialComponents.DayNight.Bridge">
        <item name="android:colorPrimary">@color/dn_text</item>
        <item name="colorAccent">@color/dn_accent_1</item>
    </style>


    <style name="RadioButton_blue">
        <item name="backgroundColor">@color/item_blue</item>
        <item name="android:textColor">@color/tt_text_light</item>
    </style>
    <style name="RadioButton_green">
        <item name="backgroundColor">@color/item_green</item>
        <item name="android:textColor">@color/tt_text_dark</item>
    </style>
    <style name="RadioButton_yellow">
        <item name="backgroundColor">@color/item_yellow</item>
        <item name="android:textColor">@color/tt_text_dark</item>
    </style>
    <style name="RadioButton_orange">
        <item name="backgroundColor">@color/item_orange</item>
        <item name="android:textColor">@color/tt_text_dark</item>
    </style>
    <style name="RadioButton_red">
        <item name="backgroundColor">@color/item_red</item>
        <item name="android:textColor">@color/tt_text_dark</item>
    </style>
    <style name="RadioButton_purple">
        <item name="backgroundColor">@color/item_purple</item>
        <item name="android:textColor">@color/tt_text_light</item>
    </style>

</resources>