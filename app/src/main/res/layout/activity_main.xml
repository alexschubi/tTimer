<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout_v_complete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color_back"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout_h_Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background_normal"
            android:backgroundTint="@color/color_header"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="@dimen/size_title"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Title"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/text_light"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="@dimen/size_date"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Date"
                android:textAlignment="center"
                android:textColor="@color/text_light"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="@dimen/size_time"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Time"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/text_light"
                android:textSize="18sp" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical">

        </androidx.recyclerview.widget.RecyclerView>

        <ScrollView
            android:id="@+id/scrollView_complete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true">

            <LinearLayout
                android:id="@+id/linearLayout_v_scrollItems"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:rotation="0">

                <LinearLayout
                    android:id="@+id/linearLayout_h_Item_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/editbox_background_normal"
                    android:backgroundTint="@color/color_items"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_title_item_1"
                        android:layout_width="@dimen/size_title"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:autoLink="all"
                        android:clickable="false"
                        android:text="title1blblblbllb"
                        android:textAlignment="center"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_date_item_1"
                        android:layout_width="@dimen/size_date"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="00.00.0000"
                        android:textAlignment="center"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_time_item_1"
                        android:layout_width="@dimen/size_time"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="00:00"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textSize="18sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/text_back_light"
                    android:hint="TESTTESTETST"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/text_back_light"
                    android:text="TextView" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/b_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/color_header"
        android:clickable="true"
        android:tint="@color/text_light"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/b_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_menu_delete" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/b_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/color_header"
        android:clickable="true"
        android:tint="@color/text_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_input_add"
        app:useCompatPadding="false" />

</androidx.constraintlayout.widget.ConstraintLayout>