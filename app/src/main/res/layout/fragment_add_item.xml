<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tt_back"
    tools:context=".fragment_add_item">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout_v_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/tb_add_text"
                style="@style/Widget.Design.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@color/tt_back_light"
                android:ems="10"
                android:hint="Text"
                android:inputType="none|textMultiLine"
                android:padding="4dp"
                android:text="nmbnmbnm"
                android:textColor="@color/tt_text_light"
                android:textSize="24sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_date_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:clickable="false"
                android:padding="4dp">

                <TextView
                    android:id="@+id/tv_addDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:text="01.01.0001"
                    android:textColor="@color/tt_text_light"
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_addTimeSpan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:text="in 200 minutes"
                    android:textColor="@color/tt_text_light"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/ll_modify_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:paddingBottom="4dp">

                <LinearLayout
                    android:id="@+id/ll_minute"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/b_minus15minute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@color/tt_back_light"
                        android:minWidth="200dip"
                        android:minHeight="25dip"
                        android:text="-15min"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/b_minus5minute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@color/tt_back_light"
                        android:minWidth="200dip"
                        android:minHeight="25dip"
                        android:text="-5min"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/b_plus5minute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@color/tt_back_light"
                        android:minWidth="200dip"
                        android:minHeight="25dip"
                        android:text="+5min"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/b_plus15minute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@color/tt_back_light"
                        android:minWidth="200dip"
                        android:minHeight="25dip"
                        android:text="+15min"
                        android:textAllCaps="false" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_hour"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/b_minus12hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@color/tt_back_light"
                        android:minWidth="200dip"
                        android:minHeight="25dip"
                        android:text="-12h"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/b_minus1hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@color/tt_back_light"
                        android:minWidth="200dip"
                        android:minHeight="25dip"
                        android:text="-1h"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/b_plus1hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@color/tt_back_light"
                        android:minWidth="200dip"
                        android:minHeight="25dip"
                        android:text="+1h"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/b_plus12hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@color/tt_back_light"
                        android:minWidth="200dip"
                        android:minHeight="25dip"
                        android:text="+12h"
                        android:textAllCaps="false" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_day"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/b_minus7day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@color/tt_back_light"
                        android:minWidth="200dip"
                        android:minHeight="25dip"
                        android:text="-7d"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/b_minus1day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@color/tt_back_light"
                        android:minWidth="200dip"
                        android:minHeight="25dip"
                        android:text="-1d"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/b_plus1day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@color/tt_back_light"
                        android:minWidth="200dip"
                        android:minHeight="25dip"
                        android:text="+1d"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/b_plus7day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@color/tt_back_light"
                        android:minWidth="200dip"
                        android:minHeight="25dip"
                        android:text="+7d"
                        android:textAllCaps="false" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_qadd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/b_add_qtime_now"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@color/tt_back_light"
                        android:minWidth="200dip"
                        android:minHeight="25dip"
                        android:text="now"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/b_add_qtime_1d"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@color/tt_back_light"
                        android:minWidth="200dip"
                        android:minHeight="25dip"
                        android:text="toworrow"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/b_add_qtime_weekend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@color/tt_back_light"
                        android:minWidth="200dip"
                        android:minHeight="25dip"
                        android:text="weekend"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/b_add_qtime_monthend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@color/tt_back_light"
                        android:minWidth="200dip"
                        android:minHeight="25dip"
                        android:text="monthend"
                        android:textAllCaps="false" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/b_del_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:background="@color/tt_delete"
                android:text="Delete Notification"
                android:textAllCaps="false"
                android:textColor="@color/tt_text_light"
                android:textSize="18sp" />

            <Button
                android:id="@+id/b_add_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:background="@color/tt_add"
                android:text="Add Notification"
                android:textAllCaps="false"
                android:textColor="@color/tt_text_light"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/rg_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:checkedButton="@id/rb_purple"
                android:gravity="center"
                android:orientation="horizontal"
                android:textAlignment="center">

                <RadioButton
                    android:id="@+id/rb_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:button="?android:attr/listChoiceIndicatorMultiple"
                    android:buttonTint="@color/item_blue"
                    android:scaleX="1.5"
                    android:scaleY="1.5" />

                <RadioButton
                    android:id="@+id/rb_green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:button="?android:attr/listChoiceIndicatorMultiple"
                    android:buttonTint="@color/item_green"
                    android:scaleX="1.5"
                    android:scaleY="1.5" />

                <RadioButton
                    android:id="@+id/rb_yellow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:button="?android:attr/listChoiceIndicatorMultiple"
                    android:buttonTint="@color/item_yellow"
                    android:scaleX="1.5"
                    android:scaleY="1.5" />

                <RadioButton
                    android:id="@+id/rb_orange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:button="?android:attr/listChoiceIndicatorMultiple"
                    android:buttonTint="@color/item_orange"
                    android:scaleX="1.5"
                    android:scaleY="1.5" />

                <RadioButton
                    android:id="@+id/rb_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:button="?android:attr/listChoiceIndicatorMultiple"
                    android:buttonTint="@color/item_red"
                    android:scaleX="1.5"
                    android:scaleY="1.5" />

                <RadioButton
                    android:id="@+id/rb_purple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:button="?android:attr/listChoiceIndicatorMultiple"
                    android:buttonTint="@color/item_purple"
                    android:scaleX="1.5"
                    android:scaleY="1.5" />

            </RadioGroup>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/b_add_final"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/tt_add"
        android:clickable="true"
        android:text="Add"
        android:textAllCaps="false"
        android:textColor="@color/tt_text_light"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>