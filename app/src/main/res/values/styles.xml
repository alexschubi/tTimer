<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetRight">0dp</item>
    </style>

    <style name="DatePicker_dark" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/main_back</item>

        <item name="colorControlActivated">@color/item_back</item>
        <item name="android:selectableItemBackgroundBorderless">@color/item_text</item>
        <item name="colorControlHighlight">@color/item_back</item>
        <item name="android:textColorPrimary">@color/header_text</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/item_text</item>    <!--days of the week-->
    </style>

    <style name="TimePicker_dark" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/main_back</item>
        <item name="android:numbersBackgroundColor">@color/header_back</item>
        <item name="android:numbersSelectorColor">@color/button_back</item>
        <item name="android:textColorPrimary">@color/header_text</item>
        <item name="android:textColorSecondary">@color/item_text</item>
    </style>

    <style name="Preferences_item" parent="Preference">
        <item name="colorAccent">@color/button_select</item>
    </style>

    <style name="Preferences_category" parent="Preference.Category">
        <item name="colorAccent">@color/item_back</item>
        <item name="background">@color/item_back</item>
    </style>

    <style name="Preference_screen" parent="Preference.PreferenceScreen">
    </style>

    <style name="RadioButton_blue">
        <item name="backgroundColor">@color/item_blue</item>
        <item name="android:textColor">@color/tt_text_light</item>
    </style>
    <style name="RadioButton_green">
        <item name="backgroundColor">@color/item_green</item>
        <item name="android:textColor">@color/tt_text_dark</item>
    </style>
    <style name="RadioButton_yellow">
        <item name="backgroundColor">@color/item_yellow</item>
        <item name="android:textColor">@color/tt_text_dark</item>
    </style>
    <style name="RadioButton_orange">
        <item name="backgroundColor">@color/item_orange</item>
        <item name="android:textColor">@color/tt_text_dark</item>
    </style>
    <style name="RadioButton_red">
        <item name="backgroundColor">@color/item_red</item>
        <item name="android:textColor">@color/tt_text_dark</item>
    </style>
    <style name="RadioButton_purple">
        <item name="backgroundColor">@color/item_purple</item>
        <item name="android:textColor">@color/tt_text_light</item>
    </style>

</resources>